@model CarRegShow

@{
    ViewData["Title"] = "Update PersonInfo";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 style="margin-left: 350px;">Update Details of @Model.cModel</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group">
                        <label asp-for="cName" class="control-label"></label>
                        <input asp-for="cName" class="form-control" />
                        <span asp-validation-for="cName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="cModel" class="control-label"></label>
                        <input asp-for="cModel" class="form-control" />
                        <span asp-validation-for="cModel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="cMake" class="control-label"></label>
                        <input asp-for="cMake" class="form-control" />
                        <span asp-validation-for="cMake" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="cRegNum" class="control-label"></label>
                        <input asp-for="cRegNum" class="form-control" />
                        <span asp-validation-for="cRegNum" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="avialability" class="control-label"></label>
                        <input asp-for="avialability" class="form-check-input" />
                        <span asp-validation-for="avialability" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top: 20px;">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" style=" margin-left: 50px;" />
                        <a class="btn btn-outline-secondary" asp-action="RiderRides" style="margin-left: 300px;">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
