@model IEnumerable<CarRegShow>

@{
    ViewData["Title"] = "Riders Car Registeration";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Car Registration</h2>

        <form>
            <div class="mb-3">
                <label for="carName" class="form-label">Car Name</label>
                <input type="text" class="form-control" id="carName" placeholder="Enter car name">
            </div>

            <div class="mb-3">
                <label for="carModel" class="form-label">Car Model</label>
                <input type="text" class="form-control" id="carModel" placeholder="Enter car model">
            </div>

            <div class="mb-3">
                <label for="carMake" class="form-label">Car Make</label>
                <input type="text" class="form-control" id="carMake" placeholder="Enter car make">
            </div>

            <div class="mb-3">
                <label for="carNumberPlate" class="form-label">Car Number Plate</label>
                <input type="text" class="form-control" id="carNumberPlate" placeholder="Enter car number plate">
            </div>

            <div class="d-grid gap-2">
                 <a class="btn btn-outline-primary me-2">
                      <i class="bi bi-pencil-square"></i>Register
                 </a>
            </div>
        </form>
    </div>
</div>