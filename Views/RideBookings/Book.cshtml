@model RideBooking

@{
    ViewData["Title"] = "Create New";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 style="margin-left: 350px;">Add Your Info</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Book">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group">
                        <label asp-for="Pickuplocation" class="control-label"></label>
                        <input asp-for="Pickuplocation" class="form-control" />
                        <span asp-validation-for="Pickuplocation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Droplocation" class="control-label"></label>
                        <input asp-for="Droplocation" class="form-control" />
                        <span asp-validation-for="Droplocation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fare" class="control-label"></label>
                        <input asp-for="Fare" class="form-control" />
                        <span asp-validation-for="Fare" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top: 20px;">
                        <input type="submit" value="Book" class="btn btn-outline-success float-right" style=" margin-left: 50px;" />
                        <a class="btn btn-outline-secondary" asp-action="CustomerRideMain" asp-controller = "CarRegShows" style="margin-left: 300px;">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

